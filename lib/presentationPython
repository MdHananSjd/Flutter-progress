p = content_4.add_paragraph()
p.text = "• High demand for accessible mental health services."
p = content_4.add_paragraph()
p.text = "• Mental well-being is increasingly prioritized, especially post-pandemic."
# Slide 5: Competitor Landscape
slide_5 = prs.slides.add_slide(prs.slide_layouts[1])
