p = content_5.add_paragraph()
p.text = "• Coa (www.joincoa.com): A 'gym for mental health' offering classes and therapy."
p = content_5.add_paragraph()
p.text = "• Talkspace (www.talkspace.com): Teletherapy platform with on-demand services."
p = content_5.add_paragraph()
p.text = "• BetterHelp (www.betterhelp.com): Online therapy services."
p = content_5.add_paragraph()
p.text = "• Cerebral (www.cerebral.com): Subscription-based mental health care."

# Slide 6: Business Model
slide_6 = prs.slides.add_slide(prs.slide_layouts[1])
title_6 = slide_6.shapes.title
title_6.text = "Business Model"
content_6 = slide_6.shapes.placeholders[1].text_frame
