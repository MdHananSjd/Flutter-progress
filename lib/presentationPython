from pptx import Presentation
from pptx.util import Inches, Pt

# Create a presentation object
prs = Presentation()

# Slide 1: Title Slide
slide_1 = prs.slides.add_slide(prs.slide_layouts[0])
title = slide_1.shapes.title
subtitle = slide_1.placeholders[1]
title.text = "Gym for the Mind: Business Concept Presentation"
subtitle.text = "Exploring a Unique Space for Mental Well-being and Growth"

# Slide 2: Concept Overview
slide_2 = prs.slides.add_slide(prs.slide_layouts[1])
title_2 = slide_2.shapes.title
title_2.text = "Concept Overview"
content_2 = slide_2.shapes.placeholders[1].text_frame
content_2.text = "• A 'gym for the mind' where clients can find a private space for reading, meetings, and relaxation."
p = content_2.add_paragraph()
p.text = "• Access to a counselor for 15 minutes per session is included in the subscription."
p = content_2.add_paragraph()
p.text = "• Additional paid sessions with a counselor or therapist can be booked for deeper needs."

# Slide 3: Unique Selling Points (USPs)
slide_3 = prs.slides.add_slide(prs.slide_layouts[1])
title_3 = slide_3.shapes.title
title_3.text = "Unique Selling Points (USPs)"
content_3 = slide_3.shapes.placeholders[1].text_frame
content_3.text = "• Differentiates from traditional therapy by offering casual, flexible access."
p = content_3.add_paragraph()
p.text = "• Positioned as a lifestyle brand for mental well-being, not solely a therapy space."
p = content_3.add_paragraph()
p.text = "• Subscription model with multiple tiers."
p = content_3.add_paragraph()
p.text = "• Creates a 'funnel' into longer counseling services."

# Slide 4: Target Market & Demand
slide_4 = prs.slides.add_slide(prs.slide_layouts[1])
title_4 = slide_4.shapes.title
